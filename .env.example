# ZERO Trading Intelligence Platform - Environment Variables
# Copy this file to .env and fill in your values

# ============================================================================
# DATABASE (TimescaleDB)
# ============================================================================
POSTGRES_USER=zero_user
POSTGRES_PASSWORD=change_me_secure_password
POSTGRES_DB=zero_trading
POSTGRES_PORT=5432

# Database connection (for services inside Docker)
DB_HOST=timescaledb
DB_PORT=5432
DB_NAME=zero_trading
DB_USER=zero_user
DB_PASSWORD=change_me_secure_password

# ============================================================================
# REDIS
# ============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=  # Optional, leave empty for local network

# ============================================================================
# GRAFANA
# ============================================================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change_me_grafana_password
GRAFANA_PORT=3000

# ============================================================================
# API / SERVICES
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8080

# ============================================================================
# DATA PROVIDERS (Milestone 1)
# ============================================================================
# Provider type: "mock" (default), "polygon", or "alpaca"
PROVIDER_TYPE=mock

# Polygon.io (if using polygon provider)
POLYGON_API_KEY=

# Alpaca (if using alpaca provider)
ALPACA_API_KEY=
ALPACA_SECRET_KEY=
ALPACA_PAPER=true

# ThetaData (for future milestones)
# THETADATA_API_KEY=

# ============================================================================
# TELEGRAM (Optional, for later milestones)
# ============================================================================
# TELEGRAM_BOT_TOKEN=
# TELEGRAM_CHAT_ID=

# ============================================================================
# LLM / NARRATIVE (Optional, for later milestones)
# ============================================================================
# OLLAMA_HOST=localhost
# OLLAMA_PORT=11434
# OLLAMA_MODEL=llama3:8b

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=./data/logs/zero.log

# ============================================================================
# JETSON SPECIFIC
# ============================================================================
# GPU_ENABLED=true
# TENSORRT_ENABLED=true
# BATCH_SIZE=32

