# Auto detect text files and perform LF normalization
* text=auto
# Python files
*.py text eol=lf
*.pyw text eol=lf
# Shell scripts
*.sh text eol=lf
# SQL files
*.sql text eol=lf
# Markdown files
*.md text eol=lf
# YAML files
*.yml text eol=lf
*.yaml text eol=lf
# JSON files
*.json text eol=lf
# Config files
*.ini text eol=lf
*.conf text eol=lf
*.cfg text eol=lf
# Docker files
Dockerfile text eol=lf
docker-compose.yml text eol=lf
*.dockerfile text eol=lf
# Makefile
Makefile text eol=lf
# Git files
.gitignore text eol=lf
.gitattributes text eol=lf
*.pkl filter=lfs diff=lfs merge=lfs -text
